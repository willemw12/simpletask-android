<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerVertical"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/taskText"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:padding="6dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/addbar"
        style="@style/SimpleToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray74"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="0sp"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/btnContext"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray74"
            android:contentDescription="\@…"
            android:maxLines="1"
            android:src="@drawable/ic_list_white_24dp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnProject"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray74"
            android:contentDescription="+…"
            android:maxLines="1"
            android:src="@drawable/ic_label_outline_white_24dp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnPrio"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray74"
            android:contentDescription="(.)"
            android:maxLines="1"
            android:src="@drawable/ic_star_border_white_24dp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray74"
            android:contentDescription="due:…"
            android:maxLines="1"
            android:src="@drawable/ic_schedule_white_24dp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnThreshold"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray74"
            android:contentDescription="t:…"
            android:maxLines="1"
            android:src="@drawable/ic_clock_start_white_24dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/savebar"
        style="@style/SimpleToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="0sp"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/btnNext"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/next"
            android:maxLines="1"
            android:src="@drawable/ic_add_white_24dp"
            android:textColor="#FFFFFF"
            android:tooltipText="@string/next" />

        <ImageButton
            android:id="@+id/btnSave"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/save_task"
            android:maxLines="1"
            android:src="@drawable/ic_save_white_24dp"
            android:textColor="#FFFFFF"
            android:tooltipText="@string/save_task" />
    </LinearLayout>
</LinearLayout>